<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/summary_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/summary_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total logged events: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/summary_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/summary_frequency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="blah"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/summary_count"
        app:layout_constraintBottom_toTopOf="@id/btn_summaryPickDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/date_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a date (YYYY-MM-DD)"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/summary_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <EditText
        android:id="@+id/date_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="YYYY-MM-DD"
        android:visibility="gone"
        android:paddingTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/summary_count"
        app:layout_constraintBottom_toTopOf="@id/btn_summaryConfirmDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_summaryConfirmDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/summary_count"
        app:layout_constraintBottom_toTopOf="@id/btn_summaryPickDay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_summaryPickDay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show me summaries for another day"
        app:layout_constraintTop_toBottomOf="@id/summary_frequency"
        app:layout_constraintBottom_toTopOf="@id/btn_summaryBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <Button
        android:id="@+id/btn_summaryBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go back to Emoticon Dashboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>