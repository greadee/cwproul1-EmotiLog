<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/summary_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Daily Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/summary_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total logged events: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/summary_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_summaryBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go back to Emoticon Dashboard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/summary_frequency"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="blah"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/summary_count"
        app:layout_constraintBottom_toTopOf="@id/btn_summaryBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>